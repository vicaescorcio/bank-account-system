<p id="notice"><%= notice %></p>

<h4>Transactions</h4>

<table class="responsive-table centered highlight">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Data</th>
      <th>Valor</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody id = 'transactions'>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.tr_type %></td>
        <td><%= transaction.tr_date %></td>
        <td><%= transaction.valor %></td>
        <td><%= image_tag("/imgs/icons/#{transaction.tr_type}.png", size:'30x30') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to  new_transaction_path,class:'btn-floating btn-large waves-effect waves-light red', remote: true do %>
<i class="material-icons">add</i>  
<%end%>
